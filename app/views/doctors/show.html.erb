<h1> <p>Name of Doc:</p><%=@doctor.name%> </h1>
<h1> <p>Specialty:</p><%=@doctor.specialty%> </h1>
<h1> <p>University of Study:</p><%=@doctor.university%> </h1>
<h1> <p>Hospital:</p><%=@doctor.hospital.name%> </h1>
<h1>Patients</h1>
<ol>
  <% @doctor.patients.each do |patient| %>
  <li id= 'patient-<%=patient.id%>'>
    <%=  patient.name  %>
    <%= button_to "Delete Appointment", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %>
  </li>
  <% end %>
</ol>
